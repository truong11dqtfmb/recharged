<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <base href="/">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/OnlineMobileRecharded.styles.css" asp-append-version="true" /> *@
    @* <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.8/angular.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.8/angular-route.min.js"></script> *@

    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular-route.min.js"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    @* <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous"> *@
    @RenderSection("plugin_style", false)
</head>
<body ng-app="App_ESEIM" ng-controller="Ctrl_ESEIM">
    <header>
        @await Html.PartialAsync("_HeaderAdmin.cshtml")
    </header>
    <div>
        <div class="admin_body">
            <div class="admin_navbar">
                <div class="ad_navbar_title">
                    ADMIN
                </div>
                <div class="ad_navbar_group">
                    <div class="ad_nb_group_title">
                        <div class="ad_nb_gr_title_icon">
                            <i class="fas fa-user"></i>
                        </div>
                        <div class="ad_nb_gr_title_content">
                            Manage User
                        </div>
                    </div>
                    <div class="ad_nb_group_item">
                        <div class="ad_nb_gr_item_title" ng-click="userPage()" ng-class="{'active_navbar': active_navbar == 1}">
                            User
                        </div>
                    </div>
                </div>
                <div class="ad_navbar_group">
                    <div class="ad_nb_group_title">
                        <div class="ad_nb_gr_title_icon">
                            <i class="fas fa-money-bill-wave"></i>
                        </div>
                        <div class="ad_nb_gr_title_content">
                            Manage Transaction
                        </div>
                    </div>
                    <div class="ad_nb_group_item">
                        <div class="ad_nb_gr_item_title" ng-click="transactionPage()" ng-class="{'active_navbar': active_navbar == 2}">
                            Transaction
                        </div>
                    </div>
                </div>
                <div class="ad_navbar_group">
                    <div class="ad_nb_group_title">
                        <div class="ad_nb_gr_title_icon">
                            <i class="fab fa-product-hunt"></i>
                        </div>
                        <div class="ad_nb_gr_title_content">
                            Manage Subcription
                        </div>
                    </div>
                    <div class="ad_nb_group_item">
                        <div class="ad_nb_gr_item_title" ng-click="subcriptionPage()" ng-class="{'active_navbar': active_navbar == 3}">
                            Subcription
                        </div>
                    </div>
                </div>
                <div class="ad_navbar_group">
                    <div class="ad_nb_group_title">
                        <div class="ad_nb_gr_title_icon">
                            <i class="far fa-credit-card"></i>
                        </div>
                        <div class="ad_nb_gr_title_content">
                            Manage Service Card
                        </div>
                    </div>
                    <div class="ad_nb_group_item">
                        <div class="ad_nb_gr_item_title" ng-click="serviceCardPage()" ng-class="{'active_navbar': active_navbar == 4}">
                            Service Card
                        </div>
                    </div>
                </div>
                <div class="ad_navbar_group">
                    <div class="ad_nb_group_title">
                        <div class="ad_nb_gr_title_icon">
                            <i class="fas fa-feather-alt"></i>
                        </div>
                        <div class="ad_nb_gr_title_content">
                            Manage Feedback
                        </div>
                    </div>
                    <div class="ad_nb_group_item">
                        <div class="ad_nb_gr_item_title" ng-click="feedbackPage()" ng-class="{'active_navbar': active_navbar == 5}">
                            Feedback
                        </div>
                    </div>
                </div>
            </div>
            @RenderBody()
        </div>
    </div>

    @* <footer class="footer text-muted">
        @await Html.PartialAsync("_Footer.cshtml")
    </footer> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
